<h1>Add New Place</h1>

<%= form_with model: @place, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', places_path, class: 'btn btn-secondary' %>
<% end %>
