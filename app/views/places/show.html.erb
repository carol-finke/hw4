<div class="container mt-3">
  <h1><%= @place.name %></h1>

  <h2>My Entries</h2>
  <div class="row">
    <% @entries.each_slice(3) do |entry_row| %>
      <% entry_row.each do |entry| %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= entry.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= entry.occurred_on %></h6>
              <p class="card-text"><%= entry.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <p>
    <%= link_to 'New Entry', new_place_entry_path(@place), class: 'btn btn-primary' %>
  </p>

  <p>
    <%= link_to 'Back to All Places', places_path, class: 'btn btn-secondary' %>
  </p>
</div>
